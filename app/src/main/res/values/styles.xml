<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CellStyle">
        <item name="backgroundColor">@color/cell_selectable_bg</item>
    </style>

    <style name="InputLabelStyle">
        <item name="android:textColor">@color/brand_pure</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape_input_bg</item>
    </style>
    <style name="InputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>

    <style name="SecondaryButton.SM" parent="PrimaryButton.SM">
        <item name="android:textColor">@color/brand_pure</item>
        <item name="android:background">@drawable/secondary_button_bg</item>
    </style>

    <style name="SecondaryButton" parent="PrimaryButton">
        <item name="android:textColor">@color/brand_pure</item>
        <item name="android:background">@drawable/secondary_button_bg</item>
    </style>

    <style name="HighlightButton.SM" parent="PrimaryButton.SM">
        <item name="android:textColor">@color/light_pure</item>
        <item name="android:background">@drawable/highlight_button_bg</item>
    </style>

    <style name="HighlightButton" parent="PrimaryButton">
        <item name="android:textColor">@color/brand_pure</item>
        <item name="android:background">@drawable/highlight_button_bg</item>
    </style>

    <style name="PrimaryButton.SM">
        <item name="android:maxHeight">24dp</item>
        <item name="android:minWidth">130dp</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_medium3</item>
        <item name="android:paddingRight">@dimen/padding_medium3</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_pure</item>
        <item name="android:background">@drawable/primary_button_bg</item>
        <item name="android:paddingTop">@dimen/padding_medium2</item>
        <item name="android:paddingBottom">@dimen/padding_medium2</item>
        <item name="android:paddingLeft">@dimen/padding_medium3</item>
        <item name="android:paddingRight">@dimen/padding_medium3</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/brand_pure</item>
        <item name="android:textColor">@color/light_pure</item>
    </style>

</resources>