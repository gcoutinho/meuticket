<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.meuticket.pos.ui.components.ViewToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        style="@style/ToolbarStyle"
        android:id="@+id/toolbar"/>

    <com.meuticket.pos.ui.components.ViewInput
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="Login *"
        android:id="@+id/name"
        app:hint="Digite o login do usuário"/>

    <com.meuticket.pos.ui.components.ViewInput
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="Senha *"
        android:id="@+id/password"
        app:inputType="textPassword"
        app:hint="Digite a senha do usuário"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="É administrador?"
        android:layoutDirection="rtl"
        android:id="@+id/print_2nd_way"/>

    <com.meuticket.pos.ui.components.ViewButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PrimaryButton"
        android:text="Cadastrar"
        android:id="@+id/submit"
        android:layout_gravity="center"/>

</androidx.appcompat.widget.LinearLayoutCompat>