<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.meuticket.pos.ui.components.ViewToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        style="@style/ToolbarStyle"
        android:id="@+id/toolbar"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium3">

        <com.meuticket.pos.ui.components.ViewInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/login_user_label"
            android:id="@+id/name"
            app:hint="@string/login_user_hint"/>

        <com.meuticket.pos.ui.components.ViewInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/login_password_label"
            android:id="@+id/password"
            app:inputType="textPassword"
            android:layout_marginTop="@dimen/padding_medium3"
            app:hint="@string/login_password_hint"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_admin_checkbox"
            android:layoutDirection="rtl"
            android:id="@+id/is_admin"/>

        <com.meuticket.pos.ui.components.ViewButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrimaryButton"
            android:text="@string/submit_save"
            android:id="@+id/submit"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_large"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>